# Environment variables for the File Uploader application
# Copy this file to .env and fill in your values

# Keycloak Configuration
KEYCLOAK_SERVER_URL=http://host.docker.internal:8080
KEYCLOAK_REALM=asghalpro
KEYCLOAK_CLIENT_ID=file-uploader
KEYCLOAK_CLIENT_SECRET=your-client-secret-here

# Azure Blob Storage (SAS Token)
AZURE_BLOB_URL=https://YOUR_ACCOUNT.blob.core.windows.net/YOUR_CONTAINER
AZURE_SAS_TOKEN=YOUR_SAS_TOKEN_HERE

# Security Settings
# Set to 'true' in production with valid SSL certificates
KEYCLOAK_VERIFY_SSL=false

# Flask secret key (generate with: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=your-secret-key-here

# App URL for OAuth2 callback (must match Keycloak redirect URIs)
APP_URL=http://localhost:5000
